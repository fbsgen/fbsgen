import "fbsgen/base"

proto_block(proto, module) ::= <<
<!DOCTYPE html>
<html>
<head>
  <title>«proto.sourcePath»</title>
  <style>
    body {
      color: #333;
      background-color: #EEE;
      font-family: 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, freesans, sans-serif;
      font-size: 1.1em;
    }
    div.message h2 {
      margin-bottom: 0;
    }
    div.message h2 a {
      color: #CD5C5C;
    }
    div.field > span {
      color: #4682B4;
    }
    div.field b a {
      color: #CD5C5C;
    }
  </style>
</head>
<body>
  <h3>«proto.sourcePath»</h3>
  «proto.messages:message_block(module)»
</body>
>>

message_block(message, module) ::= <<
<div class="message">
  <h2><a href="#«message.relativeName; format="\.==-"»" id="«message.relativeName; format="\.==-"»">«message.name»</a></h2>
  «if(module.o.("pb"))»
  «message.declaredFields:pb_field_decl(module)»
  «else»
  «message.declaredFields:fbs_field_decl(module)»
  «endif»
</div>
>>

fbs_field_decl(field, module) ::= <<
<div class="field"><span>«field.name»</span>: «if(field.repeated)»[«endif»<b>«fbs_field_type(field, module)»</b>«if(field.repeated)»]«endif» (id: «field.number»);</div>
>>

fbs_field_type(field, module) ::= <%
«if(field.userDefinedType)»
<a href="#«field.userDefinedType.relativeName; format="\.==-"»"><i>«field.fbsType»</i></a>
«else»
<span>«field.fbsType»</span>
«endif»
%>

pb_field_decl(field, module) ::= <<
<div class="field"><i>«field.modifier; format="LOWER"»</i> <b>«pb_field_type(field, module)»</b> <span>«field.name»</span> = «field.number»;</div>
>>

pb_field_type(field, module) ::= <%
«if(field.userDefinedType)»
<a href="#«field.userDefinedType.relativeName; format="\.==-"»"><i>«field.javaType»</i></a>
«else»
<span>«field.class.simpleName; format="LOWER"»</span>
«endif»
%>
